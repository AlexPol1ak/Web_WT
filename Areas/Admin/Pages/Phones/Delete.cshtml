@page "{id:int}"
@model Poliak_UI_WT.Areas.Admin.Pages.Phones.DeleteModel

<h2>Delete Phone</h2>

<p>Удалить телефон?</p>

<div>
    <strong>@Model.Phone.Name</strong> (@Model.Phone.Model)
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
</form>
