@page
@model Poliak_UI_WT.Areas.Admin.Pages.Phones.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Управление</h1>

<p>
    <a asp-page="./Create" class="btn btn-primary">
        <i class="fa-solid fa-plus">Добавить телефон</i> 
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Phone[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Phone[0].Model)</th>
            <th>@Html.DisplayNameFor(model => model.Phone[0].Price)</th>
            <th>@Html.DisplayNameFor(model => model.Phone[0].Image)</th>
            <th>@Html.DisplayNameFor(model => model.Phone[0].Category)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Phone)
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Model)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td><img src="@item.Image" width="200" height="200" /></td>
                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.PhoneId" class="btn btn-success">
                            <i class="fa-solid fa-pen-to-square"></i> Изменить
                        </a>
                        <a asp-page="./Detail" asp-route-id="@item.PhoneId" class="btn btn-info ms-1 me-1">
                            <i class="fa-solid fa-info"></i> Подробно
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.PhoneId" class="btn btn-danger">
                            <i class="fa-regular fa-trash-can"></i> Удалить
                        </a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<pager current-page="@Model.CurrentPage"
                   total-pages="@Model.TotalPages" 
                   admin="true">
            </pager>
